<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todo_sqlite_app.Views.TodoPage"
             Title="Todo List">
    <StackLayout Padding="10">
        <Label Text="Todo Items" FontSize="24" HorizontalOptions="Center" />
        <ListView x:Name="TodoListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Label Text="{Binding Title}" FontSize="18" VerticalOptions="Center" />
                            <Switch IsToggled="{Binding IsCompleted}" VerticalOptions="Center" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Entry x:Name="NewTodoEntry" Placeholder="Add new todo item" />
        <Button Text="Add Todo" Clicked="OnAddTodoClicked" />
    </StackLayout>
</ContentPage>